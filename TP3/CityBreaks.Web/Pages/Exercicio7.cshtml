@page
@model CityBreaks.Web.Pages.Exercicio7Model
@{
    ViewData["Title"] = "Exercício 7";
}

@await Html.PartialAsync("_Header")

<h1>Exercício 7 - Cards Responsivos</h1>

<div class="cards-container">
    @await Html.PartialAsync("_Card", "Card 1")
    @await Html.PartialAsync("_Card", "Card 2")
    @await Html.PartialAsync("_Card", "Card 3")
    @await Html.PartialAsync("_Card", "Card 4")
</div>

@await Html.PartialAsync("_Footer")

<style>
.cards-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    gap: 10px;
}
@media (max-width: 600px) {
    .cards-container {
        flex-direction: column;
        align-items: center;
    }
}
</style>
