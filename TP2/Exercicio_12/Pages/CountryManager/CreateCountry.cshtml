@page
@model Exercicio_12.Pages.CountryManager.CreateCountryModel
@{
    ViewData["Title"] = "Cadastrar País (Validação Customizada)";
}

<h2>Cadastrar País</h2>

<form method="post" class="mt-3">
    <div class="mb-3">
        <label asp-for="Input.CountryName" class="form-label">Nome do País:</label>
        <input asp-for="Input.CountryName" class="form-control" />
        <span asp-validation-for="Input.CountryName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.CountryCode" class="form-label">Código do País:</label>
        <input asp-for="Input.CountryCode" class="form-control" />
        <span asp-validation-for="Input.CountryCode" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Salvar País</button>
</form>

@if (Model.Country != null)
{
    <div class="alert alert-success mt-4">
        <strong>País cadastrado com sucesso!</strong><br />
        Nome: @Model.Country.CountryName<br />
        Código: @Model.Country.CountryCode
    </div>
}

@section Scripts {
    <!-- Habilita validação client-side caso os scripts estejam disponíveis em wwwroot/lib -->
    <partial name="_ValidationScriptsPartial" />
}
