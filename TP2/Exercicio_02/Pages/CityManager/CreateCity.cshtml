@page
@model Exercicio_02.Pages.CityManager.CreateCityModel
@{
    ViewData["Title"] = "Create City";
}

<h1>Cadastrar Cidade</h1>

<form method="post">
    <label for="cityName">Nome da cidade:</label>
    <input type="text" name="cityName" id="cityName" />
    <button type="submit">Enviar</button>
</form>

@if (Model.CityName != null)
{
    <p>Você cadastrou: <strong>@Model.CityName</strong></p>
}

