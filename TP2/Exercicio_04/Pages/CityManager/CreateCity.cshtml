@page
@model Exercicio_04.Pages.CityManager.CreateCityModel
@{
    ViewData["Title"] = "Cadastrar Cidade (Cliente)";
}

<h2>Cadastrar Cidade (Validação no Cliente + Servidor)</h2>

<form method="post" id="createCityForm" class="mt-3">
    <div class="mb-3">
        <label asp-for="Input.CityName" class="form-label">Nome da Cidade:</label>
        <input asp-for="Input.CityName" class="form-control" />
        <!-- Exibe mensagem de erro de validação -->
        <span asp-validation-for="Input.CityName" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
</form>

@if (Model.Submitted && Model.ModelState.IsValid)
{
    <div class="alert alert-success mt-3">
        Cidade cadastrada com sucesso: <strong>@Model.Input.CityName</strong>
    </div>
}

@section Scripts {
    <!-- Partial que traz o jquery.validate e jquery.validate.unobtrusive -->
    <partial name="_ValidationScriptsPartial" />
}
