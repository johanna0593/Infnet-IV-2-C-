@page
@model Exercicio_03.Pages.CityManager.CreateCityModel
@{
    ViewData["Title"] = "Cadastrar Cidade (Servidor)";
}

<h2>Cadastrar Cidade (Somente Validação no Servidor)</h2>

<form method="post" class="mt-3">
    <div class="mb-3">
        <label asp-for="Input.CityName" class="form-label">Nome da Cidade:</label>
        <input asp-for="Input.CityName" class="form-control" />
        <!-- Exibe mensagem de erro de validação (servidor) -->
        <span asp-validation-for="Input.CityName" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
</form>

<!-- Mensagem exibida APENAS se já submeteu e estiver válido -->
@if (Model.Submitted && Model.ModelState.IsValid)
{
    <div class="alert alert-success mt-3">
        Cidade cadastrada com sucesso: <strong>@Model.Input.CityName</strong>
    </div>
}

<!-- NÃO incluímos @section Scripts nem chamamos _ValidationScriptsPartial -->
<!-- Logo, não haverá validação client-side; apenas validação após submit -->

