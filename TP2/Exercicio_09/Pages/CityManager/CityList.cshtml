@page
@model Exercicio_09.Pages.CityManager.CityListModel
@{
    ViewData["Title"] = "Lista de Cidades";
}

<h2>Lista de Cidades</h2>
<p>Para ver detalhes de cada cidade, clique no nome:</p>

<ul class="list-group">
    @foreach (var city in Model.Cities)
    {
        <li class="list-group-item">
            <a asp-page="/CityManager/CityDetails"
               asp-route-cityName="@city">
                @city
            </a>
        </li>
    }
</ul>
