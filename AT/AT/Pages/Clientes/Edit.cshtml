@page
@model AT.Pages.Clientes.EditModel

@{
    ViewData["Title"] = "Edit";    
}

<h1>Editar Cliente</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Cliente.Id" />
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Cliente.Nome" class="control-label"></label>
                <input asp-for="Cliente.Nome" class="form-control" />
                <span asp-validation-for="Cliente.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Cliente.Email" class="control-label mt-2"></label>
                <input asp-for="Cliente.Email" class="form-control" />
                <span asp-validation-for="Cliente.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente.EnderecoId" class="control-label mt-2">Cidade</label>
                <select asp-for="Cliente.EnderecoId" class="form-control" asp-items="ViewBag.ListaCidade"></select>
                <span asp-validation-for="Cliente.EnderecoId" class="text-danger"></span>
            </div>            
            <div class="form-group mt-3">
                <input type="submit" value="Atualizar Cliente" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Index">← Voltar para Lista de Clientes</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
